rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{collection}/{document} {
      allow create:
        if request.auth.uid == request.resource.data.id
      allow update:
        if request.resource.data.id
      allow get, delete:
        if resource == null
        || request.auth.uid == resource.data.id
      allow list:
        if collection == "XfCard"
    }
  }
}
